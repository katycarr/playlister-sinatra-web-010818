<h1>Edit song: </h1>
<form action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" name="_method" value="patch">
  Name: <input type="text" name="song[name]" id="Name" value="<%= @song.name %>">
  <br></br>
  artist:
  <br>
  <input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name %>">
  <br></br>
  Choose genres:
  <br>
  <% @genres.each do |genre| %>
    <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.name %>"
    <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %></input>
  <% end %>
  <br></br>

  <input type="submit" name="submit" value="Save">


</form>
